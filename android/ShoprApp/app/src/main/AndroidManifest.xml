<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shopr.com.shoprapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/home_title"/>
        <activity
            android:name=".activity.ShoppingCartActivity"
            android:label="@string/shopping_cart_title"/>
        <activity
            android:name=".activity.WishListActivity"
            android:label="@string/wish_list_title"/>
        <activity
            android:name=".activity.FeedbackActivity"
            android:label="@string/feedback_title"/>
    </application>

</manifest>